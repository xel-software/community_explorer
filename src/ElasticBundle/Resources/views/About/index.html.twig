{% extends 'ElasticBundle::layout.html.twig' %}
{% block body %}

    <section class="content">
        <div class="row">
            <div class="col-xs-12 col-lg-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">About</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="elastic-account" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>Key</th>
                                <th>Value</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td class="text-muted">
                                    Name (Tag)
                                </td>
                                <td>
                                    Elastic (XEL)
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted">
                                    Bitcointalk
                                </td>
                                <td>
                                    <a target="_blank" href="https://bitcointalk.org/index.php?topic=1396233.new">https://bitcointalk.org/index.php?topic=1396233.new</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted">
                                    Reddit
                                </td>
                                <td>
                                    <a target="_blank" href="https://www.reddit.com/r/xel">https://www.reddit.com/r/xel</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted">
                                    Official Forum
                                </td>
                                <td>
                                    <a target="_blank" href="https://talk.elasticexplorer.org">https://talk.elasticexplorer.org</a>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-muted">
                                    Available Supply
                                </td>
                                <td>
                                    100,000,000
                                </td>
                            </tr>

                            <tr>
                                <td class="text-muted">
                                    USD Price
                                </td>
                                <td>
                                    N/A
                                </td>
                            </tr>

                            <tr>
                                <td class="text-muted">
                                    BTC Price
                                </td>
                                <td>
                                    N/A
                                </td>
                            </tr>

                            <tr>
                                <td class="text-muted">
                                    Explorer Today Requests
                                </td>
                                <td>
                                    {{ requestCount[0].reqCount }}
                                </td>
                            </tr>

                            {% if blockchainStatus %}
                                <tr>
                                    <td class="text-muted">
                                        Version
                                    </td>
                                    <td>
                                        <span class="label label-primary">{{ blockchainStatus.version }}</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        Last Block
                                    </td>
                                    <td>
                                        <a href="{{ path('elastic_block',{'block': blockchainStatus.numberOfBlocks - 1}) }}">{{ blockchainStatus.numberOfBlocks - 1 }}</a>
                                    </td>
                                </tr>
                                {#<tr>#}
                                    {#<td class="text-muted">#}
                                        {#Network Start Date#}
                                    {#</td>#}
                                    {#<td>#}
                                        {#{{ ("now"|date('U') - blockchainStatus.time)|date('Y-m-d H:i:s') }}#}
                                    {#</td>#}
                                {#</tr>#}
                                <tr>
                                    <td class="text-muted">
                                        Cumulative Difficulty
                                    </td>
                                    <td>
                                        {{ blockchainStatus.cumulativeDifficulty }}
                                    </td>
                                </tr>
                            {% endif %}

                            {% if state %}
                                <tr>
                                    <td class="text-muted">
                                        Peers
                                    </td>
                                    <td>
                                        {{ state.numberOfPeers }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        Active Peers
                                    </td>
                                    <td>
                                        {{ state.numberOfActivePeers }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        Forgers
                                    </td>
                                    <td>
                                        {{ state.numberOfUnlockedAccounts }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        Supernodes
                                    </td>
                                    <td>
                                        {{ state.numberOfSupernodes }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        Guardnodes
                                    </td>
                                    <td>
                                        {{ state.numberOfGuardnodes }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        Open Works
                                    </td>
                                    <td>
                                        {{ state.numberOpenWorks }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        Closed Works
                                    </td>
                                    <td>
                                        {{ state.numberClosedWorks }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        All Accounts
                                    </td>
                                    <td>
                                        {{ state.numberOfAccounts }}
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">
                                        All Transactions
                                    </td>
                                    <td>
                                        {{ state.numberOfTransactions }}
                                    </td>
                                </tr>
                            {% endif %}

                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Key</th>
                                <th>Value</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-xs-12 col-lg-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Logo</h3>&nbsp;&nbsp;<small>(click to download logo pack)</small>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="elastic-account" class="table table-bordered table-striped">
                            <tbody>
                            <tr>
                                <a href="{{ asset('share/elastic-logo.zip') }}" title="Logo Pack"><img style="margin: 0 auto;" class="img-responsive img-rounded" src="{{ asset('bundles/elastic/elastic/img/elastic-logo-big.png') }}"/></a>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>

{% endblock %}
{% block page_scripts %}
{% endblock %}