<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#2b6586">
    <title>Elastic Blockchain Explorer</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="{{ asset('bundles/elastic/bootstrap/css/bootstrap.min.css') }}">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="{{ asset('bundles/elastic/plugins/datatables/dataTables.bootstrap.css') }}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('bundles/elastic/dist/css/AdminLTE.min.css') }}">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="{{ asset('bundles/elastic/dist/css/skins/_all-skins.min.css') }}">

    <!-- Project own style -->
    <link rel="stylesheet" href="{{ asset('bundles/elastic/elastic/css/style.css') }}">

    {% block page_css %}{% endblock %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

{% set currRoute = app.request.attributes.get('_route') %}

<!-- ADD THE CLASS layout-top-nav TO REMOVE THE SIDEBAR. -->
<body class="hold-transition skin-black layout-top-nav">
<div class="wrapper">

    <header class="main-header">
        <nav class="navbar navbar-static-top">
            <div class="container">

                <img id="navbar-logo" src="{{ asset('bundles/elastic/elastic/img/elastic-logo.png') }}"/>

                <div class="navbar-header">
                    <a href="{{ path('elastic_homepage') }}" class="navbar-brand"><b>Elastic</b>Explorer <small class="text-muted">( testnet )</small></a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                    <ul class="nav navbar-nav">
                        {#<li class="dropdown">#}
                            {#<a href="#" class="dropdown-toggle" data-toggle="dropdown">Block Explorer <span class="caret"></span></a>#}
                            {#<ul class="dropdown-menu" role="menu">#}
                                {#<li><a href="{{ path('elastic_homepage') }}">Overview</a></li>#}
                                {#&#123;&#35;<li class="divider"></li>&#35;&#125;#}
                                {#&#123;&#35;<li><a href="#">Transactions</a></li>&#35;&#125;#}
                                {#&#123;&#35;<li><a href="#">Blocks</a></li>&#35;&#125;#}
                            {#</ul>#}
                        {#</li>#}
                        <li><a href="{{ path('elastic_homepage') }}">Block Explorer</a></li>
                        <li><a href="{{ path('elastic_peers') }}">Peers</a></li>
                        <li><a href="{{ path('elastic_faucet') }}">Faucet</a></li>
                        <li><a href="{{ path('elastic_about') }}">About</a></li>
                    </ul>
                    <form class="navbar-form navbar-left" role="search" action="{{ path('elastic_search') }}" method="post">
                        <div class="form-group">
                            <input name="input" type="text" class="form-control" id="navbar-search-input" placeholder="address / height / tx id / tx fullhash" style="width: 300px;">
                        </div>
                    </form>
                </div>
                <!-- /.navbar-collapse -->
                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                </div>
                <!-- /.navbar-custom-menu -->
            </div>
            <!-- /.container-fluid -->
        </nav>
    </header>
    <!-- Full Width Column -->
    <div class="content-wrapper">
        {% block body %}{% endblock %}
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <div class="container">
            <div class="col-xs-12 col-lg-6">
                {% if not getMyInfo() %}
                    <div class="progress progress-xs progress-striped active" style="margin-top:5px;margin-bottom:0px;">
                        <div class="progress-bar progress-bar-primary" style="width: 100%"></div>
                    </div>
                {% endif %}
            </div>
            <div class="col-xs-12 col-lg-6 center-block">
                {% if not getMyInfo() %}
                    <span class="label label-primary pull-left">Explorer is updating to the newest Elastic version. Will be back operational as soon as possible.</span>
                {% endif %}
            </div>
        </div>
        <!-- /.container -->
    </footer>
</div>
<!-- ./wrapper -->

<!-- jQuery 2.2.3 -->
<script src="{{ asset('bundles/elastic/plugins/jQuery/jquery-2.2.3.min.js') }}"></script>
<!-- Bootstrap 3.3.6 -->
<script src="{{ asset('bundles/elastic/bootstrap/js/bootstrap.min.js') }}"></script>
<!-- DataTables -->
<script src="{{ asset('bundles/elastic/plugins/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('bundles/elastic/plugins/datatables/dataTables.bootstrap.min.js') }}"></script>
<!-- SlimScroll -->
<script src="{{ asset('bundles/elastic/plugins/slimScroll/jquery.slimscroll.min.js') }}"></script>
<!-- FastClick -->
<script src="{{ asset('bundles/elastic/plugins/fastclick/fastclick.js') }}"></script>
<!-- AdminLTE App -->
<script src="{{ asset('bundles/elastic/dist/js/app.min.js') }}"></script>



{% block page_scripts %}{% endblock %}

</body>
</html>
